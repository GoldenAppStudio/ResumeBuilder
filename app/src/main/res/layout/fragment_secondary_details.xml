<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/primary_blue"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_arrow_im_fragment_secondary_details"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24_white" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_main_large" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="bottom"
            android:text="Build your resume"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="bottom"
            android:text="Step: 2/6"
            android:textColor="@color/white_50"
            android:textSize="15sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-50dp"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/cabin_regular"
                android:gravity="bottom"
                android:text="Secondary detalis"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Language Known"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/add_language_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_add_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/add_language_layout"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <EditText
                    android:background="@drawable/edittext_background"
                    android:id="@+id/language_et"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_add_language"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/button_background"
                    android:text="Add"
                    android:textAllCaps="false" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:id="@+id/language_chip_group"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Skills"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/add_skills_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_add_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/add_skill_layout"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <EditText
                    android:background="@drawable/edittext_background"
                    android:id="@+id/skill_et"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_add_skill"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/button_background"
                    android:text="Add"
                    android:textAllCaps="false" />

            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:id="@+id/skill_chip_group"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_next_secondary_details"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_background"
                android:text="Next"
                android:textAllCaps="false" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
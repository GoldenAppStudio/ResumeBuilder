<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/primary_blue"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_arrow_im_fragment_project"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24_white" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_main_large" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="bottom"
            android:text="Build your resume"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="bottom"
            android:text="Step: 4/6"
            android:textColor="@color/white_50"
            android:textSize="15sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-50dp"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Add Project"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/add_project_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_add_24" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/add_project_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="25dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="15dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin_regular"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/project_title_et"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/cabin_regular"
                        android:paddingStart="15dp"
                        android:textColor="@color/primary_blue"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin_regular"
                        android:text="Your role"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/your_role_et"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/cabin_regular"
                        android:paddingStart="15dp"
                        android:textColor="@color/primary_blue"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin_regular"
                        android:text="Team Size"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/team_size_et"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/cabin_regular"
                        android:paddingStart="15dp"
                        android:textColor="@color/primary_blue"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Tech used"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/tech_used_et"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/cabin_regular"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/primary_blue"
                    android:visibility="visible" />

                <TextView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Summary"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/summary_et"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/cabin_regular"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/primary_blue"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_add_project"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/button_background"
                    android:text="Add"
                    android:textAllCaps="false" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_project"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_next_project"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background"
                android:text="Next"
                android:layout_marginBottom="35dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
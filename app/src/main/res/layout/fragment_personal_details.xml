<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background_color"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/primary_blue"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/back_arrow_im_fragment_personal_details"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24_white" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_main_large" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="bottom"
            android:text="Build your resume"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="bottom"
            android:text="Step: 1/6"
            android:textColor="@color/white_50"
            android:textSize="15sp" />

    </RelativeLayout>

    <ScrollView
        android:background="@drawable/layout_background"
        android:layout_width="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/cabin_regular"
                android:gravity="bottom"
                android:text="@string/personal_details_fragment"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_background"
                    android:id="@+id/full_name_et"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:background="@drawable/edittext_background"
                    android:id="@+id/email_et"
                    android:layout_width="0dp"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_weight="2.5"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Phone"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:background="@drawable/edittext_background"
                    android:id="@+id/phone_et"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:background="@drawable/edittext_background"
                    android:id="@+id/address_et"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Job Title"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:background="@drawable/edittext_background"
                    android:id="@+id/job_title_et"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:visibility="visible" />

            </LinearLayout>

            <Button
                android:text="Next"
                android:layout_marginTop="35dp"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:id="@+id/btn_next_personal_details"
                android:layout_gravity="end"
                android:layout_marginStart="25dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>